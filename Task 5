                                                                        (Storing number 5 in less than 3 bits)                                                                      
 Code :
  
 #include <iostream>
 using namespace std;
 
    int bits_needed(uint32_t value)
    {
        int bits = 0;
        if (value >= 0x10000) //Sates that if the value is bigger than or equal to 4099 then give 16 bits as an output.
        {
            bits += 16;
            value >>= 16;
        }
        if (value >= 0x100) //Sates that if the value is bigger than or equal to 255 then give 8 bits as an output.
        {
            bits += 8;
            value >>= 8;
        }
        if (value >= 0x10) //Sates that if the value is bigger than or equal to 15 then give 4 bits as an output.
        {
            bits += 4;
            value >>= 4;
        }
        if (value >= 0x4) //Sates that if the value is bigger than or equal to 4 then give 2 bits as an output.
        {
            bits += 2;
            value >>= 2;
        }
        return bits + value;
    }
 
int main() {
	cout << bits_needed(5) << endl;
	return 0;
}
